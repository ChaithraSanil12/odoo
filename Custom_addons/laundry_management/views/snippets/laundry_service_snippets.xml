<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!-- Dynamic content rendered via controller and JS -->
  <template id="laundry_services_snippet_content" name="Laundry Services Snippet Content">
    <div class="row g-4">
      <t t-foreach="services" t-as="service">
        <div class="col-md-4 mb-4">
          <a t-att-href="'/services/' + service.url" class="laundry-card-link text-decoration-none">
            <div class="laundry-card card h-100 shadow-sm border-0" style="transition: transform 0.3s ease, box-shadow 0.3s ease;">
              <div class="card-img-top-container" style="height: 200px; overflow: hidden;">
                <img t-if="service.image" 
                     t-attf-src="/web/image/laundry.service/{{ service.id }}/image"
                     class="laundry-card-img w-100 h-100" 
                     style="object-fit: cover; transition: transform 0.3s ease;"
                     alt="Service Image"/>
                <div t-else="" 
                     class="d-flex align-items-center justify-content-center bg-light w-100 h-100">
                  <i class="fa fa-image fa-3x text-muted"></i>
                </div>
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2 text-dark">
                  <t t-esc="service.name"/>
                </h5>
                <p class="card-text text-muted flex-grow-1">
                  <t t-if="service.overview">
                    <t t-esc="service.overview"/>
                  </t>
                  <t t-else="">No overview available.</t>
                </p>
                <div class="mt-auto">
                  <span class="badge bg-primary">Learn More</span>
                </div>
              </div>
            </div>
          </a>
        </div>
      </t>
    </div>
  </template>
</odoo>