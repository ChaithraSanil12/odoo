<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Register the snippet into the Website Editor -->
  <template id="laundry_snippet_add_to_content" inherit_id="website.snippets" name="Laundry Snippet Registration">
    <xpath expr="//snippets[@id='snippet_structure']" position="inside">
      <t t-snippet="laundry_management.custom_contact_form_snippet" string="Contact Form" group="contact_and_forms" t-thumbnail="/laundry_management/static/description/contact_form_thumbnail.png"/>
      <t t-snippet="laundry_management.laundry_service_minimal_snippet" string="Laundry Service Minimal" group="columns" t-thumbnail="/laundry_management/static/description/service_snippet_thumbnail.png"/>
      <t t-snippet="laundry_management.laundry_price_snippet" string='Price Section' group="columns" t-thumbnail="/laundry_management/static/description/price_snippet_thumbnail.png"/>
      <t t-snippet="laundry_management.laundry_service_info_snippet" string="Laundry Service Info" group="columns" t-thumbnail="/laundry_management/static/description/service_grid_thumbnail.png"/>
    </xpath>
  </template>
</odoo>
