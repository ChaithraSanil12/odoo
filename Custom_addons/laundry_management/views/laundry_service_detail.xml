<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="laundry_service_detail" name="Laundry Service Detail">
    <t t-call="website.layout">
      <div class="container py-5">
        <!-- Hero Card -->
        <div class="card shadow-lg border-0 rounded-4 mb-5" style="background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);">
          <div class="row g-0 align-items-center">
            <!-- Service Image -->
            <div class="col-lg-5">
              <div class="p-4 p-lg-5">
                <div class="bg-white rounded-4 shadow-sm overflow-hidden" style="min-height:320px;">
                  <img t-if="service.image" t-attf-src="/web/image/laundry.service/{{ service.id }}/image"
                       class="img-fluid w-100 h-100" style="object-fit:cover; min-height:320px; max-height:400px;" alt="Service Image"/>
                  <div t-else="" class="d-flex align-items-center justify-content-center bg-light w-100 h-100" style="min-height:320px; max-height:400px;">
                    <i class="fa fa-image fa-4x text-muted"></i>
                  </div>
                </div>
              </div>
            </div>
            <!-- Service Info -->
            <div class="col-lg-7">
              <div class="p-4 p-lg-5">
                <h1 class="display-4 fw-bold mb-3 text-primary" style="letter-spacing:1px;">
                  <t t-esc="service.name"/>
                </h1>
                <t t-if="service.tagline">
                  <h4 class="text-secondary fst-italic mb-4" style="font-weight: 300;">
                    <t t-esc="service.tagline"/>
                  </h4>
                </t>
                <p class="lead text-muted mb-4 fs-4">
                  <t t-if="service.overview"><t t-esc="service.overview"/></t>
                  <t t-else="">No overview available.</t>
                </p>
                <t t-if="categories">
                  <div class="mb-4">
                    <h5 class="text-primary mb-2 fw-semibold">
                      <i class="fa fa-sitemap me-2"></i>Available Categories
                    </h5>
                    <div class="d-flex flex-wrap gap-2">
                      <t t-foreach="categories" t-as="cat">
                        <span class="badge rounded-pill bg-gradient fs-6 px-4 py-2 shadow-sm" style="background: linear-gradient(90deg, #a7c7e7 0%, #f7cac9 100%); color: #222;">
                          <i class="fa fa-tag me-1"></i><t t-esc="cat.name"/>
                        </span>
                      </t>
                    </div>
                  </div>
                </t>
                <div class="mt-4 d-flex flex-wrap gap-3">
                  <a href="/contactus" class="btn btn-primary btn-lg px-4 shadow">
                    <i class="fa fa-envelope me-2"></i>Contact Us
                  </a>
                  <a href="/services" class="btn btn-outline-secondary btn-lg px-4 shadow">
                    <i class="fa fa-arrow-left me-2"></i>Back to Services
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Service Details Card -->
        <div class="row mb-5">
          <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4">
              <div class="card-body p-4">
                <h3 class="card-title mb-4 text-primary fw-bold">
                  <i class="fa fa-info-circle me-2"></i>Service Details
                </h3>
                <div class="fs-5 text-muted" style="line-height:1.7;">
                  <t t-if="service.description">
                    <t t-raw="service.description"/>
                  </t>
                  <t t-else="">
                    <p>No detailed description available.</p>
                  </t>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Features and Benefits Section -->
        <div class="row">
          <!-- Features Column -->
          <t t-if="features">
            <div class="col-lg-6 mb-4">
              <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                  <h3 class="card-title mb-4 text-primary fw-bold">
                    <i class="fa fa-star me-2"></i>Key Features
                  </h3>
                  <ul class="list-unstyled">
                    <t t-foreach="features" t-as="feature">
                      <li class="mb-3 d-flex align-items-start">
                        <i class="fa fa-check-circle text-success me-3 mt-1 flex-shrink-0"></i>
                        <span class="fs-5" t-esc="feature.name"/>
                      </li>
                    </t>
                  </ul>
                </div>
              </div>
            </div>
          </t>

          <!-- Benefits Column -->
          <t t-if="benefits">
            <div t-attf-class="col-lg-#{features and '6' or '12'} mb-4">
              <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                  <h3 class="card-title mb-4 text-primary fw-bold">
                    <i class="fa fa-thumbs-up me-2"></i>Benefits
                  </h3>
                  <div class="space-y-3">
                    <t t-foreach="benefits" t-as="benefit">
                      <div class="mb-4">
                        <h5 class="text-dark fw-semibold mb-2 d-flex align-items-center">
                          <i class="fa fa-arrow-right text-primary me-2"></i>
                          <t t-esc="benefit.name"/>
                        </h5>
                        <t t-if="benefit.description">
                          <p class="text-muted mb-0 ps-4" t-esc="benefit.description"/>
                        </t>
                      </div>
                    </t>
                  </div>
                </div>
              </div>
            </div>
          </t>

          <!-- If no features or benefits, show a full-width placeholder -->
          <t t-if="not features and not benefits">
            <div class="col-12 mb-4">
              <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 text-center">
                  <i class="fa fa-info-circle text-muted fa-3x mb-3"></i>
                  <h4 class="text-muted">Features and Benefits</h4>
                  <p class="text-muted mb-0">No specific features or benefits have been added for this service yet.</p>
                </div>
              </div>
            </div>
          </t>
        </div>
      </div>
    </t>
  </template>
</odoo>
